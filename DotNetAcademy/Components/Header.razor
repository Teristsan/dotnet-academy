@using DotNetAcademy.Persistence.Entities
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.Routing
@using Microsoft.AspNetCore.Identity
@inject NavigationManager NavigationManager
@inject SignInManager<ApplicationUser> SignInManager
@rendermode InteractiveServer

<header class="app-header">
    <div class="container-fluid px-0">
        <div class="d-flex flex-row justify-content-between align-items-center">
            <div class="d-flex flex-row justify-content-evenly align-items-center gap-3">
                <h2 class="m-0">Flickpickd</h2>
                <!--TODO: when actual list components are created, replace these h3 tags w/ actual components.-->
                <p class="m-0">Movies</p>
                <p class="m-0">Series</p>
            </div>
            <div>
                <button class="btn btn-outline-secondary btn-sm p-1 me-2 mt-2 mb-2"
                        @onclick="Logout"
                        type="button"
                        title="Sign out"
                        aria-label="Sign out">
                    Sign out
                </button>
            </div>
        </div>
    </div>
</header>

@code {
    private void Logout()
    {
        NavigationManager.NavigateTo("/logout", forceLoad: true);
    }
}