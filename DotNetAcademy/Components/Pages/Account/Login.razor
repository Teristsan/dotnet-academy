@page "/login"

<PageTitle>Login Page</PageTitle>

<div class="container d-flex align-items-center justify-content-center" style="min-height: 100vh;">
    <div class="card shadow-sm" style="width: 350px; max-width: 90%;">
        <div class="card-body p-4">
            <div class="text-center mb-3">
                <h4 class="mb-2">Flickpickd</h4>
            </div>

            <EditForm Model="Input" OnValidSubmit="HandleLogin" FormName="login">
                <DataAnnotationsValidator />

                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <InputText @bind-Value="Input.Email" class="form-control form-control-sm" placeholder="Enter your email" />
                    <ValidationMessage For="@(() => Input.Email)" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Password</label>
                    <InputText type="password" @bind-Value="Input.Password" class="form-control form-control-sm" placeholder="Enter your password" />
                    <ValidationMessage For="@(() => Input.Password)" /> 
                </div>

                <div class="mb-3 form-check">
                    <InputCheckbox @bind-Value="Input.RememberMe" class="form-check-input" id="rememberMe" />
                    <label class="form-check-label small" for="rememberMe">
                        Remember me
                    </label>
                </div>

                <button type="submit" class="btn btn-dark btn-sm w-100 mb-3">Sign in</button>
            </EditForm>

            <div class="text-center">
                <div class="mb-2">
                    <small class="text-muted">Demo accounts:</small>
                </div>
                <div class="d-flex justify-content-center">
                    <div>
                        <small><strong>admin@dotnetacademy.com</strong> / Admin1</small><br>
                        <small><strong>user@dotnetacademy.com</strong> / User12</small>
                    </div>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger alert-sm mt-3">@errorMessage</div>
            }
        </div>
    </div>
</div>